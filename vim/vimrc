" Vundle bootstrap settings
set nocompatible

filetype off
filetype plugin indent off
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

Bundle 'gmarik/vundle'

" My Bundles
Bundle 'godlygeek/tabular'
Bundle 'scrooloose/nerdtree'
Bundle 's-urbaniak/xoria256'
Bundle 'ervandew/supertab'

" needs
" go get github.com/nsf/gocode
Bundle 'Blackrush/vim-gocode'

" needs
" go get -v code.google.com/p/rog-go/exp/cmd/godef
" go install -v code.google.com/p/rog-go/exp/cmd/godef
Bundle 'dgryski/vim-godef'

" follow the instructions in :help command-t.txt
Bundle 'wincent/Command-T'

colorscheme xoria256

" XML
autocmd filetype xml map <LocalLeader>l :%!xmllint --format -<CR>

" Google Go
filetype off
set runtimepath+=$GODIST/misc/vim

autocmd filetype go map K <Plug>(godoc-keyword)

" use real tabs instead of spaces
autocmd filetype go set noexpandtab

" before writing a file, store the current cursor in mark register 'c'
autocmd filetype go autocmd BufWritePre <buffer> ks | %!goimports
" after writing a file, restore the cursor posistion from mark register 'c'
autocmd filetype go autocmd BufWritePost <buffer> normal 's

" Global settings

" enable indentation for filetype plugins
filetype on
filetype plugin indent on

" enable ruler and always turn on status bar
set ruler
set ls=2

" show absolute line numbers in side bar
set number

" enable syntax highlighting
syntax on

" enable ignore case and smartcase
set ic
set scs

" enable incremental search
set is

" show command in last line of the screen
set showcmd

" set up indentation using '4 whitespace chars' style
set ts=4
set shiftwidth=4
set softtabstop=4
set expandtab

map ; :
map <C-l> 3<C-W><
map <C-h> 3<C-W>>
map <LocalLeader>1 :NERDTreeToggle<CR>
