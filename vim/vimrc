" Vundle
set nocompatible

filetype off
filetype plugin indent off
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

Bundle 'gmarik/vundle'

" My Bundles
Bundle 'wgibbs/vim-irblack'
Bundle 'kml/vim-irblack-plus'
Bundle 'davidhalter/jedi-vim'
Bundle 's-urbaniak/ropevim'
Bundle 's-urbaniak/xoria256'
Bundle 'maksimr/vim-jsbeautify'
Bundle 'godlygeek/tabular'
Bundle 'Blackrush/vim-gocode'

colorscheme xoria256

" CSS
autocmd filetype css noremap <buffer> <LocalLeader>l :call CSSBeautify()<cr>

" HTML
autocmd filetype html noremap <buffer> <LocalLeader>l :call HtmlBeautify()<cr>

" Javascript
autocmd filetype javascript noremap <buffer> <LocalLeader>l :call JsBeautify()<cr>

" Python
autocmd filetype python set listchars=tab:>.,trail:.,extends:#,nbsp:.

" XML
autocmd filetype xml map <LocalLeader>l :%!xmllint --format -<CR>

" Google Go
filetype off
set runtimepath+=$GODIST/misc/vim

autocmd filetype go map K <Plug>(godoc-keyword)
autocmd filetype go map <LocalLeader>l :Fmt<CR>
autocmd filetype go set noexpandtab
autocmd filetype go set makeprg=go\ install

" Global settings

" enable indentation for filetype plugins
filetype on
filetype plugin indent on

" show relative numbers in side bar
set number

" enable syntax highlighting
syntax on

" enable ignore case and smartcase
set ic
set scs

" enable incremental search
set is

" show command in last line of the screen
set showcmd

" set up indentation using '4 whitespace chars' style
set ts=4
set shiftwidth=4
set softtabstop=4
set expandtab

let mapleader = ","
let maplocalleader = ","
