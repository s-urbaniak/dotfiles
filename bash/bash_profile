### environment

# go
export GOPATH=$HOME/src/go
export PATH=$GOPATH/bin:$PATH

export EDITOR=vim # default editor
export LANG=en_US.UTF-8

BLACK='\e[0;30m'
RED='\e[0;31m'
GREEN='\e[0;32m'
YELLOW='\e[0;33m'
BLUE='\e[0;34m'
MAGENTA='\e[01;35m'
CYAN='\e[0;36m'
WHITE='\e[0;37m'

PLATFORM=$(uname)

# bash (osx)
if [ $PLATFORM == 'Darwin' ] && which brew >/dev/null;
then
	export PATH=/usr/local/bin:$PATH

	if [ -f $(brew --prefix)/etc/bash_completion ]; then
		. $(brew --prefix)/etc/bash_completion
	fi

    # go
    export PATH=$PATH:/usr/local/opt/go/libexec/bin
fi

# linux
if [ $PLATFORM == 'Linux' ]
then
    [[ -f /usr/share/git/git-prompt.sh ]] && source /usr/share/git/git-prompt.sh
    [[ -f /usr/share/git-core/contrib/completion/git-prompt.sh ]] && source /usr/share/git-core/contrib/completion/git-prompt.sh

    alias ls="ls --color"
    alias pbcopy="xclip -sel clip"
    alias grm=gvfs-trash

    export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/gnupg/S.gpg-agent.ssh"
#    echo "UPDATESTARTUPTTY" | gpg-connect-agent
fi

### aliases

# virtualbox
alias vb=VBoxManage
# emacs
alias e="emacsclient -n"

# Undocumented feature which sets the size to "unlimited".
# http://stackoverflow.com/questions/9457233/unlimited-bash-history
export HISTFILESIZE=
export HISTSIZE=
# Change the file location because certain bash sessions truncate .bash_history file upon close.
# http://superuser.com/questions/575479/bash-history-truncated-to-500-lines-on-each-login
export HISTFILE=~/.bash_eternal_history

### prompt setup

function __prompt() {
    # Save and reload the history after each command finishes
    history -a
    history -c
    history -r
    echo -ne "\033]0;$(dirs -0)\007"
}

PROMPT_COMMAND=__prompt

PS1="$(echo \$?) \[$GREEN\]\A \[$MAGENTA\]\h \[$YELLOW\]\w\[$RED\]\$(__git_ps1)\n\[\033[0m\]$ "

### other settings

# append to history, don't overwrite it
shopt -s histappend

# configure glob
shopt -s globstar
shopt -s nocaseglob

# disable XON/XOFF flow control, to enable C-s forward history search
[[ $- == *i* ]] && stty -ixon

# register direnv
eval $(direnv hook bash)

# register kubectl completion
source <(kubectl completion bash)

### helper functions

function enterpod() {
    local pod=$(rkt list --no-legend | tr -s '\t' | grep running | head -1)
    local uuid="${1:-$(echo "${pod}" | cut -f1)}"
    echo entering pod "${pod}"
    sudo nsenter -n -m -p -t $(pgrep -P $(rkt status $uuid | grep pid | cut -d= -f2)) /bin/bash
}

function runningpod() {
    rkt l --no-legend --full | grep running | cut -f1 | head -1
}

[[ -f "$HOME/.bashrc_local" ]] && source "$HOME/.bashrc_local"
