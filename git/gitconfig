[user]
	name = Sergiusz Urbaniak

[color]
	ui = true

[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false

[alias]
    ls-commit-files = diff-tree --no-commit-id --name-only -r
    loggdo = log --graph --decorate --oneline
	stat = status -sb

    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"

[difftool "9diff"]
	cmd = 9 diff -n \"$LOCAL\" \"$REMOTE\"
[push]
	default = simple
[merge]
	conflictstyle = diff3
[gui]
	fontui = -family \"Helvetica Neue\" -size 13 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 12 -weight normal -slant roman -underline 0 -overstrike 0
